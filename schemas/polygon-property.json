{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://github.com/francescozoccheddu/ae-mesh2shape/schemas/polygon-property.json",
    "anyOf": [
        {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "time": {
                        "$ref": "time.json"
                    },
                    "value": {
                        "$ref": "polygon.json"
                    }
                },
                "required": [
                    "time",
                    "value"
                ],
                "additionalProperties": false
            },
            "minItems": 1
        },
        {
            "$ref": "polygon.json"
        }
    ]
}