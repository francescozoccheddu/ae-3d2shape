{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://github.com/francescozoccheddu/ae-3d2shape/schemas/camera.json",
    "$defs": {
        "view": {
            "type": "object",
            "properties": {
                "up": {
                    "$ref": "vector.json"
                },
                "forward": {
                    "$ref": "vector.json"
                },
                "eye": {
                    "$ref": "vector.json"
                }
            },
            "required": [
                "up",
                "forward",
                "eye"
            ],
            "additionalProperties": false
        },
        "orthographic-projection": {
            "type": "object",
            "properties": {
                "kind": {
                    "const": "orthographic"
                },
                "scale": {
                    "type": "number",
                    "minimum": 0,
                    "default": 1
                }
            },
            "required": [
                "kind"
            ],
            "additionalProperties": false
        },
        "perspective-projection": {
            "type": "object",
            "properties": {
                "kind": {
                    "const": "perspective"
                },
                "fieldOfViewDegress": {
                    "type": "number",
                    "minimum": 10,
                    "maximum": 170,
                    "default": 60
                }
            },
            "required": [
                "kind"
            ],
            "additionalProperties": false
        },
        "projection": {
            "oneOf": [
                {
                    "$ref": "#/$defs/orthographic-projection"
                },
                {
                    "$ref": "#/$defs/perspective-projection"
                }
            ]
        }
    },
    "type": "object",
    "properties": {
        "view": {
            "$ref": "#/$defs/view"
        },
        "projection": {
            "$ref": "#/$defs/projection"
        }
    },
    "required": [
        "view",
        "projection"
    ],
    "additionalProperties": false
}